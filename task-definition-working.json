{
  "family": "meetingbot-dev-meet-bot-local",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "4096",
  "memory": "16384",
  "executionRoleArn": "arn:aws:iam::228692667167:role/meetingbot-dev-ecs-execution-role",
  "taskRoleArn": "arn:aws:iam::228692667167:role/meetingbot-dev-meetingbot-service-role",
  "containerDefinitions": [
    {
      "name": "bot",
      "image": "mcr.microsoft.com/playwright:v1.52.0-jammy",
      "essential": true,
      "command": ["sh", "-c", "cd /app && git clone https://github.com/talksy/meetingbot.git . && cd src/bots && npm install && npm start"],
      "workingDirectory": "/app",
      "environment": [
        {
          "name": "BOT_DATA",
          "value": "PLACEHOLDER_BOT_DATA"
        },
        {
          "name": "NODE_ENV",
          "value": "development"
        },
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        },
        {
          "name": "AWS_BUCKET_NAME",
          "value": "talksy-videos-dev-0c18ea10"
        },
        {
          "name": "COMPLETION_QUEUE_URL",
          "value": "https://sqs.us-east-1.amazonaws.com/228692667167/talksy-recording-completed.fifo"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/meetingbot-dev-meet-bot-local",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
